<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/tv_barang_no"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_border_cell"
        android:padding="4dp"
        android:text="No" />

    <TextView
        android:id="@+id/tv_barang_nama"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_border_cell"
        android:padding="4dp"
        android:text="Nama Barang" />

    <TextView
        android:id="@+id/tv_barang_keterangan"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_border_cell"
        android:padding="4dp"
        android:text="Keterangan" />

    <TextView
        android:id="@+id/tv_barang_tanggal"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_border_cell"
        android:padding="4dp"
        android:text="Tanggal dan Waktu" />

    <LinearLayout
        android:background="@drawable/bg_border_cell"
        android:layout_width="200dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_barang_gambar_head"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:text="Gambar" />

        <ImageView
            android:visibility="gone"
            android:padding="16dp"
            android:src="@drawable/gambar"
            android:id="@+id/iv_barang_gambar"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_barang_hapus"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_border_cell"
        android:padding="4dp"
        android:text="Aksi" />

</LinearLayout>