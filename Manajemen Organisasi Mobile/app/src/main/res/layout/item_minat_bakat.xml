<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:gravity="center"
        android:id="@+id/tv_minat_bakat_no"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_border_cell"
        android:padding="4dp"
        android:text="No" />

    <TextView
        android:id="@+id/tv_minat_bakat_nama"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_border_cell"
        android:padding="4dp"
        android:text="Nama" />

    <TextView
        android:id="@+id/tv_minat_bakat_jurusan"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_border_cell"
        android:padding="4dp"
        android:text="Jurusan" />

    <TextView
        android:id="@+id/tv_minat_bakat_nim"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_border_cell"
        android:padding="4dp"
        android:text="NIM" />

    <TextView
        android:id="@+id/tv_minat_bakat_minat"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_border_cell"
        android:padding="4dp"
        android:text="Minat" />

    <TextView
        android:id="@+id/tv_minat_bakat_alasan"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_border_cell"
        android:padding="4dp"
        android:text="Alasan" />

    <TextView
        android:id="@+id/tv_minat_bakat_datetime"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_border_cell"
        android:padding="4dp"
        android:text="Tanggal dan Waktu" />

    <LinearLayout
        android:padding="8dp"
        android:background="@drawable/bg_border_cell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btn_minat_bakat_hapus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/ic_baseline_delete_24"
            android:padding="4dp"/>

    </LinearLayout>


</LinearLayout>